{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/*"]
      },
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["src", "bin"]
  }